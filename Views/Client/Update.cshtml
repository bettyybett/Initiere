
@model Initiere.Models.Client

@{
    ViewBag.Title = "Update";
}

<h2>Update</h2>
@using (Html.BeginForm(actionName: "Update", controllerName: "Client"))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)
    @Html.HiddenFor(b => b.IdClient)
    <br />

    @Html.Label("Nume", "Numele Clietului:")
    <br />
    @Html.EditorFor(b => b.Nume, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(b => b.Nume, "", new { @class = "text-danger" })
    <br />


    @Html.Label("Username", "User-ul Clietului:")
    <br />
    @Html.EditorFor(b => b.Cont.UserName, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(b => b.Cont.UserName, "", new { @class = "text-danger" })
    <br />
    

    @Html.Label("Parola", "Parola Clietului:")
    <br />
    @Html.EditorFor(b => b.Cont.Password, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(b => b.Cont.Password, "", new { @class = "text-danger" })
    <br />
    <button class="btn btn-primary" type="submit">Update</button>
}
